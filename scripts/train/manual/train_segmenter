#! /usr/bin/env bash

DATASETS="['HN1-SEG','HNPCT-SEG','HNSCC-SEG','OPC-SEG']"
REGION="BrachialPlexus_L"
MODEL_NAME="segmenter-$REGION"
NUM_EPOCHS=5
NUM_FOLDS=None
NUM_GPUS=1
NUM_NODES=1
NUM_WORKERS=4
NUM_SAMPLES=None
RESUME=False
RESUME_CHECKPOINT=None
RUN_NAME="test"
SCRIPT_DIR="/data/gpfs/projects/punim1413/medical-imaging/scripts"
TEST_FOLD=None
USE_LOGGER=False

python $SCRIPT_DIR/train/segmenter --slurm_job_id $SLURM_JOB_ID --model_name $MODEL_NAME --run_name $RUN_NAME --datasets $DATASETS --region $REGION --num_epochs $NUM_EPOCHS \
    --num_folds $NUM_FOLDS --num_gpus $NUM_GPUS --num_nodes $NUM_NODES --num_samples $NUM_SAMPLES --num_workers $NUM_WORKERS --resume $RESUME --resume_checkpoint $RESUME_CHECKPOINT \
    --test_fold $TEST_FOLD --use_logger $USE_LOGGER

import fire
import os
import sys

root_dir = os.path.abspath(os.path.join(os.path.dirname(__file__), '..', '..', '..'))
sys.path.append(root_dir)

from mymi.regions import RegionNames
from mymi.reporting.dataset.training import create_loader_manifest

DATASETS = ('PMCC-HN-TEST-LOC', 'PMCC-HN-TRAIN-LOC')
REGIONS = RegionNames
NUM_FOLDS = 5
TEST_FOLDS = list(range(NUM_FOLDS))

for region in REGIONS:
    for test_fold in TEST_FOLDS:
        create_loader_manifest(DATASETS, region, num_folds=NUM_FOLDS, test_fold=test_fold)

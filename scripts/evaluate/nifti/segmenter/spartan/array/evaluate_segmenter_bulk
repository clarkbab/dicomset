import subprocess

regions = '0-16'
script = 'scripts/evaluate/nifti/segmenter/spartan/array/evaluate_segmenter'
test_folds = [0]
models = ['clinical', 'transfer']
num_trains = [5, 10, 20, 50, 100, None]

for model in models:
    for test_fold in test_folds:
        for num_train in num_trains:
            # Create slurm command.
            export = f'ALL,MODEL={model},NUM_TRAIN={num_train},TEST_FOLD={test_fold}'
            command = f'sbatch --array={regions} --export={export} {script}' 
            print(command)
            process = subprocess.Popen(command.split(), stdout=subprocess.PIPE)
            process.communicate()
